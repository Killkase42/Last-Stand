        pioneerEnemy = pygame.image.load('pioneerInGame.png')
        protectorEnemy = pygame.image.load('protectorInGame.png')

        if startWaveOne == True:
            pioneerIsEnemyOneFleetOne = True
            enemyOneHealth = 100
            pioneerIsEnemyTwoFleetOne = True
            enemyTwoHealth = 100
            protectorIsEnemyThreeFleetOne = True
            enemyThreeHealth = 80
            startWaveOne = False

        displayHUD()

        if selectedEnemyFleet == 1:
            if pioneerIsEnemyOneFleetOne == True and enemyOneHealth > 0:
                screen.blit(pioneerEnemy, (690, 200))
            if pioneerIsEnemyTwoFleetOne == True and enemyTwoHealth > 0:
                screen.blit(pioneerEnemy, (350, 240))
            if pioneerIsEnemyThreeFleetOne == True and enemyThreeHealth > 0:
                screen.blit(pioneerEnemy, (1030, 240))
            if pioneerIsEnemyFourFleetOne == True and enemyFourHealth > 0:
                screen.blit(pioneerEnemy, (10, 290))
            if pioneerIsEnemyFiveFleetOne == True and enemyFiveHealth > 0:
